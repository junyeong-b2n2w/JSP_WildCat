<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <properties resource="com/wild/properties/db.properties" />

  <typeAliases>
  	  <typeAlias type="java.lang.String" alias="str"/>
  	  <typeAlias type="java.lang.Integer" alias="int"/> 
   
	  <typeAlias type="com.wild.dto.MemberVO" alias="member" />
	  <typeAlias type="com.wild.dto.MenuVO" alias="menu" />
  </typeAliases>

  <environments default="dev">
    <environment id="dev">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="${driverClassName}"/>
        <property name="url" value="${url}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
      </dataSource>
    </environment>
  </environments>
  
  <mappers>
  	<mapper resource="com/wild/mybatis/mappers/Member-Mapper.xml"/>
  	<mapper resource="com/wild/mybatis/mappers/Menu-Mapper.xml"/>
  </mappers>
</configuration>